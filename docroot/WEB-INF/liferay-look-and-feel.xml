<?xml version="1.0"?>
<!DOCTYPE look-and-feel PUBLIC "-//Liferay//DTD Look and Feel 6.2.0//EN" "http://www.liferay.com/dtd/liferay-look-and-feel_6_2_0.dtd">

<look-and-feel>
	<compatibility>
		<version>6.2.4+</version>
	</compatibility>
	<theme id="liferay-deep-blue" name="Liferay Deep Blue">
		<settings>
			<setting configurable="true" key="header" type="checkbox"
				value="true" />
			<setting configurable="true" key="footer" type="checkbox"
				value="true" />
			<setting configurable="true" key="breadcrumb" type="checkbox"
				value="true" />
			<setting configurable="true" key="poweredby" type="textarea"
				value="CTC Global" />

		</settings>

		<color-scheme id="01" name="Day">
			<css-class>day</css-class>
			<color-scheme-images-path>
				${images-path}/color_schemes/${css-class}
			</color-scheme-images-path>
		</color-scheme>
		<color-scheme id="02" name="Night">
			<css-class>night</css-class>
		</color-scheme>

	</theme>
</look-and-feel>